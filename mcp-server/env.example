# Enhanced Financial Agent MCP Server Environment Configuration

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
DEBUG=true
RELOAD=true
LOG_LEVEL=INFO

# LandingAI ADE Configuration
VISION_AGENT_API_KEY=your_landingai_api_key_here
ENDPOINT_HOST=https://api.va.landing.ai

# BDH Architecture Configuration
BDH_VOCAB_SIZE=256
BDH_D_MODEL=256
BDH_N_HEADS=4
BDH_N_NEURONS=32768
BDH_N_LAYERS=6
BDH_DROPOUT=0.05
BDH_USE_ROPE=true
BDH_USE_HEBBIAN=true
BDH_PLASTICITY_TIMESCALE=60.0

# Document Processing Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=uploads
STORAGE_PATH=storage/documents
TEMP_PATH=storage/temp
ALLOWED_FILE_TYPES=pdf,csv,xlsx,xls,json,jpg,jpeg,png,tiff

# Fraud Detection Configuration
FRAUD_RISK_THRESHOLD_LOW=0.3
FRAUD_RISK_THRESHOLD_MEDIUM=0.6
FRAUD_RISK_THRESHOLD_HIGH=0.8
AMOUNT_THRESHOLD=100000
SUSPICIOUS_PATTERN_THRESHOLD=0.7

# Database Configuration
DATABASE_URL=sqlite:///./enhanced_financial_agent.db
DATABASE_ECHO=false
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_DB=0
CACHE_TTL=3600

# Security Configuration
SECRET_KEY=your-secret-key-here-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-here-change-in-production
API_KEY_REQUIRED=false
RATE_LIMIT_REQUESTS_PER_MINUTE=100

# Logging Configuration
LOG_FILE=logs/enhanced_financial_agent.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_ENDPOINT=/metrics
HEALTH_CHECK_INTERVAL=30
PROMETHEUS_PORT=9090

# External Services Configuration
OCR_SERVICE_PROVIDER=tesseract
OCR_LANGUAGE=eng
OCR_CONFIDENCE_THRESHOLD=0.7

# Compliance API Configuration
COMPLIANCE_API_ENABLED=false
COMPLIANCE_API_BASE_URL=https://api.compliance.com
COMPLIANCE_API_KEY=your_compliance_api_key_here

# Risk Scoring API Configuration
RISK_SCORING_API_ENABLED=false
RISK_SCORING_API_BASE_URL=https://api.riskscoring.com
RISK_SCORING_API_KEY=your_risk_scoring_api_key_here

# Alert Configuration
EMAIL_ALERTS_ENABLED=true
SMS_ALERTS_ENABLED=false
ALERT_EMAIL=alerts@financialagent.com
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# CORS Configuration
CORS_ALLOWED_ORIGINS=*
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=*

# Background Processing Configuration
ENABLE_BACKGROUND_PROCESSING=true
MAX_BACKGROUND_WORKERS=4
BACKGROUND_TASK_TIMEOUT=300

# Model Configuration
DEFAULT_BDH_MODEL_PATH=models/bdh_default.pth
DEFAULT_LANDINGAI_MODEL=dpt-2-latest
MODEL_CACHE_SIZE=100
MODEL_RELOAD_INTERVAL=3600

# Performance Configuration
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT=30
RESPONSE_TIMEOUT=60
ENABLE_COMPRESSION=true

# Development Configuration
ENABLE_DEBUG_ROUTES=true
ENABLE_SWAGGER_UI=true
ENABLE_REDOC=true
ENABLE_PROFILING=false

# Production Configuration (set to true in production)
PRODUCTION_MODE=false
ENABLE_HTTPS=false
SSL_CERT_PATH=
SSL_KEY_PATH=
