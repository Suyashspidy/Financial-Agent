# Environment variables for Financial Agent MCP Server

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
DEBUG=true
RELOAD=true

# Database Configuration
DATABASE_URL=sqlite:///./financial_agent.db
DATABASE_ECHO=false
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# Security Configuration
API_KEY_REQUIRED=false
SECRET_KEY=your-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-key-here

# AI Model Configuration
SENTIMENT_MODEL=cardiffnlp/twitter-roberta-base-sentiment-latest
NER_MODEL=dbmdz/bert-large-cased-finetuned-conll03-english
TEXT_CLASSIFICATION_MODEL=microsoft/DialoGPT-medium

# Document Processing Configuration
MAX_FILE_SIZE=10485760
STORAGE_PATH=storage/documents
TEMP_PATH=storage/temp

# Fraud Detection Configuration
FRAUD_RISK_THRESHOLD_LOW=0.3
FRAUD_RISK_THRESHOLD_MEDIUM=0.6
FRAUD_RISK_THRESHOLD_HIGH=0.8
AMOUNT_THRESHOLD=100000

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/financial_agent.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# Cache Configuration
CACHE_ENABLED=true
REDIS_URL=redis://localhost:6379
CACHE_DEFAULT_TTL=3600

# External Services Configuration
OCR_SERVICE_PROVIDER=tesseract
OCR_LANGUAGE=eng
OCR_CONFIDENCE_THRESHOLD=0.7

# Compliance API Configuration
COMPLIANCE_API_ENABLED=false
COMPLIANCE_API_BASE_URL=https://api.compliance.com
COMPLIANCE_API_KEY=your_api_key_here

# Risk Scoring API Configuration
RISK_SCORING_API_ENABLED=false
RISK_SCORING_API_BASE_URL=https://api.riskscoring.com
RISK_SCORING_API_KEY=your_api_key_here

# Alert Configuration
EMAIL_ALERTS_ENABLED=true
SMS_ALERTS_ENABLED=false
ALERT_EMAIL=alerts@financialagent.com

# Rate Limiting Configuration
RATE_LIMITING_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=100

# CORS Configuration
CORS_ALLOWED_ORIGINS=*
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE
CORS_ALLOWED_HEADERS=*
